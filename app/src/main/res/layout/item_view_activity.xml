<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/item_view_make_textview"
        android:layout_width="191dp"
        android:layout_height="102dp"
        android:text="@string/item_view_make_textview_string"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_view_value_textview"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/item_view_value_textview"
        android:layout_width="191dp"
        android:layout_height="102dp"
        android:text="@string/item_view_value_textview_string"
        app:layout_constraintBottom_toTopOf="@+id/item_view_make_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/item_view_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_view_back_button_string"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_view_edit_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_view_make_textview"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/item_view_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_view_edit_button_string"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/item_view_back_button"
        app:layout_constraintTop_toBottomOf="@+id/item_view_make_textview"
        app:layout_constraintVertical_bias="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>