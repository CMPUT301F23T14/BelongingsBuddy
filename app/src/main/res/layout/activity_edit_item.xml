<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_master_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddItemActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple"
        android:textColor="@color/white"
        android:text="@string/app_name"
        android:padding="8dp"
        android:textSize="20sp">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_button"
        android:text="EDIT MODE"
        android:textSize="20sp"
        android:gravity="center">
    </TextView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                android:background="@color/light_purple"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:id="@+id/name_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name: "
                    android:textSize="25sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/black">
                </TextView>

                <EditText
                    android:id="@+id/edit_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp">
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                android:background="@color/light_purple"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:id="@+id/date_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date of Purchase: "
                    android:textSize="20sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center">
                </TextView>

                <TextView
                    android:id="@+id/add_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="yyyy-mm-dd"
                    android:textSize="20sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.5">
                </TextView>

                <Button
                    android:id="@+id/edit_pick_date_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="SET"
                    android:layout_gravity="end|center_vertical"
                    android:layout_weight="0.5">
                </Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                android:background="@color/light_purple"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity: "
                    android:textSize="25sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center">
                </TextView>

                <Button
                    android:id="@+id/edit_minus_button"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="-"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_gravity="start|center_vertical"
                    android:layout_weight="0.5">
                </Button>

                <EditText
                    android:id="@+id/edit_quantity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:inputType="number"
                    android:textSize="20sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="0.5">
                </EditText>

                <Button
                    android:id="@+id/edit_plus_button"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="+"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_weight="0.5">
                </Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                android:background="@color/light_purple"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:id="@+id/description_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description:"
                    android:textSize="25sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center">
                </TextView>

                <EditText
                    android:id="@+id/edit_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="25sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.5">
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                android:background="@color/light_purple"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:id="@+id/make_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Make: "
                    android:textSize="25sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/black">
                </TextView>

                <EditText
                    android:id="@+id/edit_make"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:textSize="25sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp">
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                android:background="@color/light_purple"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:id="@+id/model_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Model: "
                    android:textSize="25sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/black">
                </TextView>

                <EditText
                    android:id="@+id/edit_model"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:textSize="25sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp">
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                android:background="@color/light_purple"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:id="@+id/value_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Value: "
                    android:textSize="25sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/black">
                </TextView>

                <EditText
                    android:id="@+id/edit_value"
                    android:inputType="numberDecimal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="$0.00"
                    android:textSize="25sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp">
                </EditText>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                android:background="@color/light_purple"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:id="@+id/serial_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Serial Number: "
                    android:textSize="25sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/black">
                </TextView>

                <EditText
                    android:id="@+id/edit_serial_number"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:textSize="25sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp"
                    android:layout_weight="1">
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                android:background="@color/light_purple"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comment: "
                    android:textSize="25sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/black">
                </TextView>

                <EditText
                    android:id="@+id/edit_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:textSize="25sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp">
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                android:background="@color/light_purple"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tags: "
                    android:textSize="25sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/black">
                </TextView>

                <EditText
                    android:id="@+id/edit_tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:textSize="25sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp">
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                android:background="@color/light_purple"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Photos: "
                    android:textSize="25sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/black">
                </TextView>

                <Button
                    android:id="@+id/edit_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+">
                </Button>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_weight="0">

        <Button
            android:id="@+id/edit_cancel"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:backgroundTint="@color/light_red"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:focusable="true">
        </Button>

        <Button
            android:id="@+id/edit_confirm"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONFIRM"
            android:backgroundTint="@color/light_green"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:focusable="true">
        </Button>

    </LinearLayout>

</LinearLayout>
