<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_master_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddItemActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple"
        android:textColor="@color/white"
        android:text="@string/app_name"
        android:padding="8dp"
        android:textSize="20sp">
    </TextView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                android:background="@color/light_purple"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name: "
                    android:textSize="25sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/black">
                </TextView>

                <TextView
                    android:id="@+id/view_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                android:background="@color/light_purple"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date of Purchase: "
                    android:textSize="20sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center">
                </TextView>

                <TextView
                    android:id="@+id/view_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="yyyy-mm-dd"
                    android:textSize="20sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.5">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                android:background="@color/light_purple"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity: "
                    android:textSize="25sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center">
                </TextView>

                <TextView
                    android:id="@+id/view_quantity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.5">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                android:background="@color/light_purple"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description:"
                    android:textSize="25sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center">
                </TextView>

                <TextView
                    android:id="@+id/view_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="25sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.5">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                android:background="@color/light_purple"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Make: "
                    android:textSize="25sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/black">
                </TextView>

                <TextView
                    android:id="@+id/view_make"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                android:background="@color/light_purple"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Model: "
                    android:textSize="25sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/black">
                </TextView>

                <TextView
                    android:id="@+id/view_model"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                android:background="@color/light_purple"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Value: "
                    android:textSize="25sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/black">
                </TextView>

                <TextView
                    android:id="@+id/view_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp">
                </TextView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                android:background="@color/light_purple"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Serial Number: "
                    android:textSize="25sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/black">
                </TextView>

                <TextView
                    android:id="@+id/view_serial_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp"
                    android:layout_weight="1">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                android:background="@color/light_purple"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comment: "
                    android:textSize="25sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/black">
                </TextView>

                <TextView
                    android:id="@+id/view_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                android:background="@color/light_purple"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tags: "
                    android:textSize="25sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/black">
                </TextView>

                <TextView
                    android:id="@+id/view_tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                android:background="@color/light_purple"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Photos: "
                    android:textSize="25sp"
                    android:background="@color/light_purple"
                    android:paddingVertical="10dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/black">
                </TextView>

                <Button
                    android:id="@+id/show_images_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show Images" >
                </Button>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_weight="0">

        <Button
            android:id="@+id/view_back"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:backgroundTint="@color/blue_button"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:focusable="true">
        </Button>

        <Button
            android:id="@+id/view_belete"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DELETE"
            android:backgroundTint="@color/light_red"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:focusable="true">
        </Button>

        <Button
            android:id="@+id/view_edit"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EDIT"
            android:backgroundTint="@color/light_green"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:focusable="true">
        </Button>

    </LinearLayout>

</LinearLayout>