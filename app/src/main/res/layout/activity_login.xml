<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8D8A8">

    <TextView
        android:id="@+id/login_title"
        android:layout_width="356dp"
        android:layout_height="52dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="264dp"
        android:layout_marginEnd="177dp"
        android:fontFamily="cursive"
        android:text="@string/belongings_buddy"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/login_button"
        style="@style/Button.Gray"
        android:layout_width="224dp"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        android:fontFamily="sans-serif"
        android:text="@string/login"
        android:textAlignment="center"
        android:textCursorDrawable="@android:color/transparent"
        android:textSize="20sp"
        android:theme="@style/Button.Gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_title" />

    <EditText
        android:id="@+id/username_input"
        style="@style/EditText.Gray"
        android:layout_width="224dp"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        android:background="#C6C6C6"
        android:digits="@string/username_digits"
        android:hint="@string/username"
        android:inputType="text"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_title" />

    <EditText
        android:id="@+id/password_input"
        style="@style/EditText.Gray"
        android:layout_width="224dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="#C6C6C6"
        android:digits="@string/username_digits"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_input" />

    <Button
        android:id="@+id/create_button"
        style="@style/Button.Gray"
        android:layout_width="224dp"
        android:layout_height="50dp"
        android:text="@string/sign_up"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_button"
        app:layout_constraintVertical_bias="0.085" />

    <Button
        android:id="@+id/login_confirm"
        style="@style/Button.Gray"
        android:layout_width="224dp"
        android:layout_height="50dp"
        android:text="@string/login"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_input"
        app:layout_constraintVertical_bias="0.248" />

    <Button
        android:id="@+id/sign_up_confirm"
        style="@style/Button.Gray"
        android:layout_width="224dp"
        android:layout_height="50dp"
        android:text="@string/sign_up"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_input"
        app:layout_constraintVertical_bias="0.248" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/login_button"
        android:fontFamily="sans-serif"
        android:text="Back"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>